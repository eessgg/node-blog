<div class="jumbotron">
  <h1 class="display-5">POSTS ðŸ“°</h1>
</div>



<div class="row">
  <% if(locals.posts.length > 0) { %>
  <% for(let i = 0; i < posts.length; i++) { %>
  <div class="col-md-6 p-5">
    <h2> <%= posts[i].title %> </h2>
    <p> <%= posts[i].text %> </p>
    <div class="btn-group">
      <form method="POST" action="/posts/<%= posts[i]._id %>?_method=DELETE">
        <a href="/posts/edit/<%= posts[i]._id %>" class="btn btn-primary">Editar &#x270F;</a>
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" class="btn btn-warning" value="Deletar &#x26A0;">
        </form>
    </div>
  </div>
  <% } %>
  <% } else { %>
  <div class="alert alert-primary" role="alert">
    Sem postagens no momento.
  </div>
  <% } %>
</div>

