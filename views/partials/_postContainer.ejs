<div class="row">
  <% if(locals.posts) { %>
    <% for(let i = 0; i < posts.length; i++) { %>
      <div class="col-md-6 p-5">
        <h2> <%= posts[i].title %> </h2>
        <p> <%= posts[i].text %> </p>
        <form>
          <a href="/posts/edit/:id" class="btn btn-primary">Edit &#x270F;</a>
          <a href="/posts/delete/:id" class="btn btn-primary">Delete &#x1F6A8;</a>
        </form>
      </div>
    <% } %>
  <% } else { %>
    <div class="alert alert-primary" role="alert">
      Sem postagens.
    </div>
  <% } %>
</div>